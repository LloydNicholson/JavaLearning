
public class Vehicle {
	private String type;
	private int size;
	
	private int speed;
	private int direction;
	
	public Vehicle(String type, int size) {
		this.type = type;
		this.size = size;
		
		this.direction = 0;
		this.speed = 0;
	}
	
	public void steer(int direction) {
		this.direction += direction;
		System.out.println("Vehichle.steer(): Steering at " + direction + " degrees");
	}
	
	public void move(int currentSpeed, int currentDirection) {
		speed = currentSpeed;
		direction = currentDirection;
		
		System.out.println("Vehicle.move(): Moving at " + speed + " in direction " + direction);
	}

	public String getType() {
		return type;
	}

	public void setType(String type) {
		this.type = type;
	}

	public int getSize() {
		return size;
	}

	public void setSize(int size) {
		this.size = size;
	}

	public int getSpeed() {
		return speed;
	}

	public void setSpeed(int speed) {
		this.speed = speed;
	}

	public int getDirection() {
		return direction;
	}

	public void setDirection(int direction) {
		this.direction = direction;
	}

	
	
	
}
