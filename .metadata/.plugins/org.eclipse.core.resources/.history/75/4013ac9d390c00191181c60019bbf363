
public class PerfectNumber {

	public static void main(String[] args) {
		isPerfectNumber(6);
	}
	
	public static boolean isPerfectNumber(int number) {
		boolean isPerfect = false;
		if (number < 1) {
			return false;
		}
		
		int sum = 0;
		for (int i = 1; i < number; i++) {
			sum += number % i;
			System.out.println(sum);
			
			if (sum == number) {
				isPerfect = true;
			}
		}
		
		
		return isPerfect;
		
	}

}
